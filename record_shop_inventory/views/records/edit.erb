<h1> Edit Record </h1>

<form class = "new_form" action="/records/<%=@record.first.id%>" method="post">

  <div class = "text_input">
    <label class = "form_label" for="record_title">Title:</label>
    <input class = "form_input" type="text" id="record_title" name="title" value="<%= @record.first.title %>"/>
    <br>
    <div class = "select_input">
      <label class = "form_label" for="artist">Artist:</label>
      <select class = "form_select" id="artist" name="artist_id">
        <% for artist in @artists %>
        <option value="<%= artist.id %>" <%= 'selected' if @artist.first.id == artist.id %>><%= artist.artist_name %></option>
        <% end %>
      </select>
      <br>
    </div>
    <br>
    <div class = "select_input">
      <label class = "form_label" for="genres">Genre(s):</label>
      <select class = "form_select" id="genres" name="genres" multiple>
        <% for genre in @all_genres %>
        <option value="<%= genre.id %>" <%= 'selected' if @genres.includes? (genre.genre_name) %>><%= genre.genre_name %></option>
        <% end %>
      </select>
      <br>
    </div>
    <br>
    <label class = "form_label" for="record_release_date">Release Date:</label>
    <input class = "form_input" type="text" id="record_release_date" name="release_date" value="<%= @record.first.release_date %>"/>
    <br>
  </div>

  <div class = "number_input">
    <label class = "form_label" for="record_buying_cost">Unit Price:</label>
    <input class = "form_input" type="number" id="record_buying_cost" name="buying_cost" min="1" max="1000" value="<%= @record.first.provide_buying_cost %>"/>
    <br>
    <label class = "form_label" for="record_selling_price">Retail Price:</label>
    <input class = "form_input" type="number" id="record_selling_price" name="selling_price" min="1" max="1000" value="<%= @record.first.provide_selling_price %>"/>
    <br>
  </div>

  <div class = "select_input">
    <label class = "form_label" for="label_name">Label:</label>
    <select class = "form_select" id="label_name" name="label_id">
      <% for label in @labels %>
      <option value="<%= label.id %>" <%= 'selected' if @label.first.id == label.id %>><%= label.name %></option>
      <% end %>
    </select>
    <br>
  </div>

  <div class = "file_input">
    <label class = "form_label" for="artwork">Upload Album Artwork:</label>
    <input class = "form_input" type="file" id="artwork" name="file" accept="image/png, image/jpeg"/>
    <br>
  </div>

  <div class = "button_input">
    <button>Save Record</button>
  </div>
</form>
