<h1> New Record </h1>

<form class = "new_form" action="/records/new" method="post">

  <div class = "select_input">
    <label class = "form_label" for="label_name">Label:</label>
    <select class = "form_select" id="label_name" name="label_id">
      <option value="<%= 'add_new' %>">Add New Label</option>
      <% for label in @labels %>
      <option value="<%= label.id %>"><%= label.name %></option>
      <% end %>
    </select>
    <br>
  </div>

  <div class = "text_input">
    <label class = "form_label" for="label_name">Label Name:</label>
    <input class = "form_input" type="text" id="label_name" name="name" placeholder="Only for new label" required minlength="1"/>
    <br>
    <label class = "form_label" for="location">Label Location:</label>
    <input class = "form_input" type="text" id="location" name="location" placeholder="Only for new label" required minlength="1"/>
    <br>
  </div>

  <div class = "text_input">
    <label class = "form_label" for="record_title">Title:</label>
    <input class = "form_input" type="text" id="record_title" name="title" required minlength="1"/>
    <br>
  </div>

  <div class = "select_input">
    <label class = "form_label" for="artist">Artist:</label>
    <select class = "form_select" id="artist" name="artist_id">
      <option value="<%= 'add_new' %>">Add New Artist</option>
      <% for artist in @artists %>
      <option value="<%= artist.id %>"><%= artist.artist_name %></option>
      <% end %>
    </select>
    <br>
  </div>
  <br>
  <div class = "text_input">
    <label class = "form_label" for="artist_name">Artist Name:</label>
    <input class = "form_input" type="text" id="artist_name" name="artist_name" placeholder="Only for new artist" required minlength="1"/>
    <br>
  </div>
<br>
  <div class = "checkbox_input" id="genre">
    <label class = "checkbox_select" for="genre">Genre(s):</label>
    <br>
    <% hash_number = 0 %>
    <% for genre in @all_genres %>
    <input class = "checkbox_select" type="checkbox" name=<%="genres"+hash_number.to_s %> value="<%=genre.id%>"> <%=genre.genre_name%>
    <br>
    <% hash_number += 1 %>
    <% end %>
    <br>
  </div>
  <div class = "text_input">
    <label class = "form_label" for="genre_name">Genre Name:</label>
    <input class = "form_input" type="text" id="genre_name" name="genre_name" placeholder="Only for new genre" required minlength="1"/>
    <br>
  </div>
  <div class = "text_input">
    <br>
    <label class = "form_label" for="record_release_date">Release Date:</label>
    <input class = "form_input" type="date" id="record_release_date" name="release_date" value="1900-01-01"/>
    <br>
  </div>

  <div class = "number_input">
    <label class = "form_label" for="record_stock_quantity">Stock Quantity:</label>
    <input class = "form_input" type="number" id="record_stock_quantity" name="stock_quantity" min="1" max="1000" value="0" step=1>
    <br>
    <label class = "form_label" for="record_buying_cost">Unit Price:</label>
    <input class = "form_input" type="number" id="record_buying_cost" name="buying_cost" min="1" max="1000" value="0"/>
    <br>
    <label class = "form_label" for="record_selling_price">Retail Price:</label>
    <input class = "form_input" type="number" id="record_selling_price" name="selling_price" min="1" max="1000" value="0"/>
    <br>
  </div>

  <div class = "file_input">
    <label class = "form_label" for="artwork">Upload Album Artwork:</label>
    <input class = "form_input" type="file"
    id="artwork" name="file"
    accept="image/png, image/jpeg"/>
    <br>
  </div>

  <div class = "button_input">
    <button>Save Record</button>
  </div>
</form>
