<div class = "inventory_link">
<a href="/"><span>Back to Inventory</span></a>
</div>

<br>

<h1> Edit Label </h1>

<br>

<div>
  <form action="/labels/<%=@label.first.id%>" method="post">

    <div>
      <label for="label_name">Label Name:</label>
      <input type="text" id="label_name" name="name" value="<%= @label.first.name %>" required minlength="1"/>
      <br>
      <br>
      <label for="location">Label Location:</label>
      <input type="text" id="location" name="location" value="<%= @label.first.location %>" required minlength="1"/>
    </div>

    <br>

    <div>
      <button>Save Label</button>
    </div>

  </form>
</div>
