<h1> New Sale for <%=@record.first.title%> </h1>

<br>

<div>
<form action="/sales/<%= @record.first.id %>/new" method="post">

  <div>
    <label for="sale_quantity">Sale Quantity:</label>
    <input type="number" id="sale_quantity" name="sale_quantity" min="1" max="1000" step=1/>
  </div>

  <br>

  <div>
    <label for="overhead">Overhead (as a decimal):</label>
    <input type="number" id="overhead" name="overhead" step="0.01" min="0" max="1"  value = "<%=Sale.provide_previous_overhead%>" />
  </div>

  <br>

  <div>
    <button>Save Sale</button>
  </div>
</form>
