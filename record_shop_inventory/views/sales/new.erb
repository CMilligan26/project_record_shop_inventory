<h1> New Sale </h1>

<form action="/sales/new" method="post">
  <label for="record_title">Record:</label>
  <select id="record_title" name="record_id">
    <% for record in @records %>
    <option value="<%= record.id %>"><%= record.title %></option>
    <% end %>
  </select>
  <br>
  <label for="sale_quantity">Sale Quantity:</label>
  <input type="number" id="sale_quantity" name="sale_quantity" min="1" max="1000"/>
  <br>
  <button>Save Sale</button>
</form>
