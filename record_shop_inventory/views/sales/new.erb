<h1> New Sale </h1>

<br>

<div>
  <form action="/sales/new" method="post">

    <div>
      <label for="record_title">Record:</label>
      <select id="record_title" name="record_id" required>
        <option style="display:none" disabled selected value> -- Choose Record -- </option>
        <% for record in @records %>
        <option value="<%= record.id %>"><%= record.title %></option>
        <% end %>
      </select>
    </div>

    <br>

    <div>
      <label for="sale_quantity">Sale Quantity:</label>
      <input type="number" id="sale_quantity" name="sale_quantity" step="1" min="1" max="1000"/>
    </div>

    <br>

    <div>
      <label for="overhead">Overhead (as a decimal):</label>
      <input type="number" id="overhead" name="overhead" step="0.01" min="0" max="1"  value = "<%=Sale.provide_previous_overhead%>" />
    </div>

    <br>

    <div>
      <button>Save Sale</button>
    </div>
  </form>
</div>
