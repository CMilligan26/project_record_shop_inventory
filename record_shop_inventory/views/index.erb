<h1>Inventory</h1>

<div class = "all_links">
<a class = "sales_all" href="/sales/all"><span>View All Sales</span></a>
<a class = "labels_all" href="/labels/all"><span>View All Labels</span></a>
</div>

<br>

<div class = "new_links">
<a class = "record_new" href="/records/new"><span>Add New Record</span></a>
<a class = "label_new" href="/labels/new"><span>Add New Label</span></a>
<a class = "sale_new" href="/sales/new"><span>Add New Sale</span></a>
</div>

<br>

<div class = "sort_index">
<form action="/" method="post">
<label for="sort">Sort by:</label>
<select default = "" id="sort" name="sort">
	<option style="display:none" disabled selected value> -- Choose Sort Method -- </option>
	<option value='title a-z'>Title(A-Z)</option>
</select>
<button>Sort</button>
</form>
</div>

<br>

<table>
	<thead>
	<tr>
		<th scope="col">Title</th>
		<th scope="col">Artist</th>
    <th scope="col">Genre</th>
    <th scope="col">Description</th>
    <th scope="col">Label</th>
    <th scope="col">Stock Quantity</th>
	</tr>
	</thead>
  <%@records.each do |record|%>
	<tr>
		<td><a href="/records/<%=record.id%>"><span><%=record.title%></span></a></td>
		<td><%=record.artist%></td>
    <td><%=record.genre%></td>
		<td><%=record.description%></td>
    <td><a href="/labels/<%=record.label_id%>"><span><%=record.label.first.name%></span></a></td>
    <td><%=record.provide_stock_quantity%></td>
	</tr>
  <%end%>
</table>
